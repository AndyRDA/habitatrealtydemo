---
// Foundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
// Sections
import Subscribe from "@/components/ctas/Subscribe.astro";
// Content
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
// Tags
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Tag Index";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="overflow-hidden">
    <Wrapper class="pb-12 lg:pt-32">
      <Text
        tag="h1"
        variant="displayXL"
        data-aos="fade-up"
        data-aos-duration="1500"
        class="font-medium tracking-tighter text-base-900"
      >
        All tags
      </Text>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 mt-8 border-t border-base-200 pt-8"
      >
        {
          tags.map((tag) => (
            <a
              class="text-base-900  hover:text-base-500 capitalize"
              href={`/blog/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>
    </Wrapper>
  </section>
  <Subscribe />
</BaseLayout>

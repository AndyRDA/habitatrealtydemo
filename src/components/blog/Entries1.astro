---
// Assets
import { Image } from "astro:assets";
// Foundations
import Text from "@/components/foundations/elements/Text.astro";
const { title, url, description, pubDate, image, avatar, author } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  image: Astro.props.post.data.image.url,
  title: Astro.props.post.data.title,
  description: Astro.props.post.data.description,
  avatar: Astro.props.post.data.avatar.url,
  author: Astro.props.post.data.author,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<a href={url} title={title} class="text-xs 2xl:text-sm duration-300">
  <div class="overflow-hidden group">
    <Image
      width={500}
      height={500}
      src={image}
      alt={title}
      class="aspect-[16/12] w-full object-cover object-center group-hover:scale-110 transition-transform duration-500"
    />
  </div>

  <div class="w-full divide-y divide-base-200">
    <div class="flex items-center gap-3">
      <Image
        width={500}
        height={500}
        src={avatar}
        alt={author}
        class="inline-block size-9 object-cover rounded-full"
      />
      <div class="gap-4 py-4 text-base-500">
        <Text tag="p" variant="textXS">{pubDate}</Text>
        <Text tag="p" variant="textXS">{author}</Text>
      </div>
    </div>
    <div class="gap-4 py-4">
      <Text tag="h3" variant="textLG" class="text-base-900 font-medium">
        {title}
      </Text>
      <Text tag="p" variant="textSM" class="text-base-500 mt-4"
        >{description}</Text
      >
    </div>
  </div>
</a>

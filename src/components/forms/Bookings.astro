---
// Foundations
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
---

<section class="overflow-hidden">
  <Wrapper variant="standard" class="pb-12 lg:pt-32">
    <Text
      tag="h2"
      variant="textXL"
      class="font-medium text-base-900"
      data-aos="fade-up"
      data-aos-duration="1500"
    >
      Book a visit with us
    </Text>
    <div class="grid lg:grid-cols-3 pt-8 mt-8 border-t border-base-200">
      <div
        class="lg:col-span-2 lg:col-start-2"
        data-aos="fade-up"
        data-aos-duration="2000"
      >
        <Text
          tag="h3"
          variant="textXL"
          class="font-medium text-base-900 lg:text-pretty"
        >
          Check out our availability and book the date and time that works for
          you
        </Text>
        <div class="mt-4 text-pretty text-base-500 2xl:text-lg">
          Fill up the form below to book your appointment with us. We will be in
          touch with you shortly.
        </div>
      </div>
    </div>
    <!-- Cal inline embed code begins -->
    <div
      class="max-h-[80dvh] outline outline-base-200 p-8 mt-12 overflow-x-hidden overflow-y-auto"
    >
      <div style="width:100%;height:100%;overflow:scroll" id="my-cal-inline">
      </div>
    </div>
    <script type="text/javascript">
      (function (C, A, L) {
        let p = function (a, ar) {
          a.q.push(ar);
        };
        let d = C.document;
        C.Cal =
          C.Cal ||
          function () {
            let cal = C.Cal;
            let ar = arguments;
            if (!cal.loaded) {
              cal.ns = {};
              cal.q = cal.q || [];
              d.head.appendChild(d.createElement("script")).src = A;
              cal.loaded = true;
            }
            if (ar[0] === L) {
              const api = function () {
                p(api, arguments);
              };
              const namespace = ar[1];
              api.q = api.q || [];
              if (typeof namespace === "string") {
                cal.ns[namespace] = cal.ns[namespace] || api;
                p(cal.ns[namespace], ar);
                p(cal, ["initNamespace", namespace]);
              } else p(cal, ar);
              return;
            }
            p(cal, ar);
          };
      })(window, "https://app.cal.com/embed/embed.js", "init");
      Cal("init", "15min", { origin: "https://cal.com" });
      Cal.ns["15min"]("inline", {
        elementOrSelector: "#my-cal-inline",
        config: { layout: "month_view" },
        calLink: "michael-andreuzza/15min",
      });
      Cal.ns["15min"]("ui", {
        hideEventTypeDetails: false,
        layout: "column_view",
      });
    </script>
    <!-- Cal inline embed code ends -->
  </Wrapper>
</section>

---
// Assets
import { Image } from "astro:assets";
import ContactImage from "@/images/sell.png";
// Foundations
import Text from "@/components/foundations/elements/Text.astro";
import Button from "@/components/foundations/elements/Button.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
---

<section class="overflow-hidden">
  <Wrapper class="py-12">
    <Text
      tag="h1"
      variant="textXL"
      data-aos="fade-up"
      data-aos-duration="1500"
      class="font-medium text-base-900"
    >
      Contact us
    </Text>
    <div class="grid lg:grid-cols-3 pt-8 mt-8 border-t border-base-200 gap-8">
      <div class="relative overflow-hidden">
        <Image
          src={ContactImage}
          alt="#_"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="h-full object-cover object-center relative"
        />
        <div class="absolute w-full h-full inset-0 p-8 bg-base-900/80 2xl:p-20">
          <Text tag="h3" variant="displaySM" class="font-medium text-white">
            Thank you for contacting Habitat Realty.
          </Text>
          <Text tag="p" variant="textBase" class="mt-6 text-base-200">
            Using the form below, please provide as much detailed information as
            possible. The information you submit may be shared with our
            independently owned and operated franchisee so that your concerns
            can be addressed.
            <br />
            <br />
            <small>
              *Please note that by providing your phone number and email
              address, you are providing consent for us to reach out to you via
              this method.
            </small>
          </Text>
        </div>
      </div>
      <div class="lg:col-span-2" data-aos="fade-up" data-aos-duration="2000">
        <form class="w-full lg:col-span-2">
          <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
            <div>
              <label
                for="first-name"
                class="block text-xl font-medium text-base-900"
                >First name</label
              >
              <div>
                <input
                  type="text"
                  name="first-name"
                  id="first-name"
                  autocomplete="given-name"
                  class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                />
              </div>
            </div>
            <div>
              <label
                for="last-name"
                class="block text-xl font-medium text-base-900">Last name</label
              >
              <div>
                <input
                  type="text"
                  name="last-name"
                  id="last-name"
                  autocomplete="family-name"
                  class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                />
              </div>
            </div>
            <div>
              <label for="email" class="block text-xl font-medium text-base-900"
                >Email address</label
              >
              <div>
                <input
                  id="email"
                  name="email"
                  type="email"
                  autocomplete="email"
                  class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                />
              </div>
            </div>
            <div>
              <label for="phone" class="block text-xl font-medium text-base-900"
                >Phone number</label
              >
              <div>
                <input
                  id="phone"
                  name="phone"
                  type="tel"
                  autocomplete="tel"
                  class="block w-full h-12 border-0 py-1.5 border-b
                border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400
                focus:ring-2 focus:ring-inset sm:text-sm"
                />
              </div>
            </div>
          </div>
          <div class="flex flex-col gap-8 pt-8">
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <span class="block text-xl font-medium text-base-900"
                >In what country is the office located?</span
              >
              <div>
                <label
                  for="country-located"
                  class="block text-xl font-medium text-base-900 sr-only"
                  >Select your country</label
                >
                <div>
                  <select
                    name="country-located"
                    id="country-located"
                    class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                  >
                    <option value="Select Concern Type">Select Country</option>
                    <option value="United States">United States</option>
                    <option value="Canada">Canada</option>
                    <option value="Mexico">Mexico</option>
                    <option value="United Kingdom">United Kingdom</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <span class="block text-xl font-medium text-base-900">
                In which state is the office located?</span
              >
              <div>
                <label
                  for="state-office-located"
                  class="block text-xl font-medium text-base-900 sr-only"
                  >Select office</label
                >
                <div>
                  <select
                    name="state-office-located"
                    id="state-office-located"
                    class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                  >
                    <option value="Select Concern Type">Select a state</option>
                    <option value="Alabama">Alabama</option>
                    <option value="Alaska">Alaska</option>
                    <option value="Arizona">Arizona</option>
                    <option value="Arkansas">Arkansas</option>
                    <option value="California">California</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <span class="block text-xl font-medium text-base-900">
                In which city is the office located?
              </span>
              <div>
                <label
                  for="city-office-located"
                  class="block text-xl font-medium text-base-900 sr-only"
                  >Select city</label
                >
                <div>
                  <select
                    name="city-office-located"
                    id="city-office-located"
                    class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                  >
                    <option value="Select Concern Type">Select a city</option>
                    <option value="New York">New York</option> …
                    <option value="San Francisco">San Francisco</option>
                    <option value="Los Angeles">Los Angeles</option>
                    <option value="Chicago">Chicago</option>
                    <option value="Houston">Houston</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <span class="block text-xl font-medium text-base-900">
                What was the date of the incident?
              </span>
              <div>
                <label
                  for="event-date"
                  class="block text-xl font-medium text-base-900 sr-only"
                  >Date</label
                >
                <div>
                  <input
                    type="date"
                    name="event-date"
                    id="event-date"
                    autocomplete="off"
                    class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                  />
                </div>
              </div>
            </div>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <span class="block text-xl font-medium text-base-900">
                How would you categorize your concern?
              </span>
              <div>
                <label
                  for="event-date"
                  class="block text-xl font-medium text-base-900 sr-only"
                  >Date</label
                >
                <div>
                  <select
                    name="event-date"
                    id="event-date"
                    class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                  >
                    <option value="Select Concern Type"
                      >Select Concern Type</option
                    >
                    <option value="Discrimination">Discrimination</option>
                    <option value="Failure to Disclose"
                      >Failure to Disclose</option
                    >
                    <option value="Fraud">Fraud</option>
                    <option value="Lack of Service">Lack of Service</option>
                    <option value="Property Management"
                      >Property Management</option
                    >
                    <option value="Rental">Rental</option>
                    <option value="Repairs">Repairs</option>
                    <option value="Theft">Theft</option>
                    <option value="Other">Other</option>
                    <!-- Add more options as needed -->
                  </select>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <span class="block text-xl font-medium text-base-900"
                >Which office do you have an issue with?
              </span>
              <div>
                <label
                  for="office-issue"
                  class="block text-xl font-medium text-base-900 sr-only"
                  >Office issue</label
                >
                <div>
                  <select
                    name="office-issue"
                    id="office-issue"
                    class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                  >
                    <option value="Select Concern Type">Select office</option>
                    <option value="New York">New York</option> …
                    <option value="San Francisco">San Francisco</option>
                    <option value="Los Angeles">Los Angeles</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <span class="block text-xl font-medium text-base-900"
                >Please describe the issue you had?</span
              >
              <div>
                <label
                  for="issue"
                  class="block text-xl font-medium text-base-900 sr-only"
                  >Write here</label
                >
                <div>
                  <textarea
                    id="issue"
                    name="issue"
                    rows="6"
                    placeholder="Write here"
                    class="block w-full border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                  ></textarea>
                </div>
              </div>
            </div>
          </div>
          <div class="flex w-full pt-8 border-t border-base-200 mt-8">
            <Button type="submit" size="xl" variant="default" class="ml-auto">
              Submit
            </Button>
          </div>
        </form>
      </div>
    </div>
  </Wrapper>
</section>

---
// Assets
import { Image } from "astro:assets";
import SubcribeImage from "@/images/blog/SubcribeImage.jpeg";

// Foundations
import Text from "@/components/foundations/elements/Text.astro";
import Button from "@/components/foundations/elements/Button.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard" class="py-12">
    <div class="relative grid grid-cols-1 gap-4 md:grid-cols-2 lg:items-center">
      <Image
        width={800}
        height={1000}
        src={SubcribeImage}
        alt="#_"
        class="max-h-80 md:max-h-[80dvh] w-full object-cover"
      />
      <div
        class="p-8 lg:p-20 h-full flex flex-col items-center justify-center outline outline-base-200"
      >
        <div>
          <Text
            tag="h3"
            variant="displayMD"
            class="text-balance font-medium text-base-900"
          >
            Subscribe to our newsletter
          </Text>
          <div class="mt-8 pt-8 border-t border-base-200">
            <Text tag="p" variant="textBase" class="text-base-500">
              Get the latest news, tips, and insights from our team of experts.
              We'll keep you updated on the latest trends, deals, and best
              practices in the real estate industry.
            </Text>
          </div>
          <div class="flex flex-col gap-2 mt-8">
            <div>
              <label for="email" class="block text-xl font-medium text-base-900"
                >Email address</label
              >
              <div>
                <input
                  id="email"
                  name="email"
                  type="email"
                  autocomplete="email"
                  class="block w-full h-12 border-0 py-1.5 border-b border-base-200 text-base-900 ring-transparent focus:ring-black placeholder:text-base-400 focus:ring-2 focus:ring-inset sm:text-sm"
                />
              </div>
            </div>
            <div class="flex">
              <Button type="submit" size="xxl" variant="default" class="w-full">
                Subscribe
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>

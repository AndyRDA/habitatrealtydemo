---
const {
  variant,
  size,
  onlyIconSize,
  gap,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white",
  "bg-base-800",
  "hover:bg-base-900",
  "focus:outline-base-900",
];
// Accent button
const accentClass = [
  "text-white",
  "bg-accent-600",
  "hover:bg-accent-400",
  "focus:outline-accent-500",
];
// Muted button
const mutedClass = [
  "text-base-900",
  "bg-base-50",
  "hover:bg-base-100",
  "focus:outline-base-100",
];
// Size
const xs = ["h-9", "px-6", "py-3", "text-xs"];
const sm = ["h-10", "px-6", "py-3", "text-sm"];
const base = ["h-11", "px-8", "py-4", "text-base"];
const md = ["h-12", "px-8", "py-4", "text-md"];
const lg = ["h-13", "px-8", "py-4", "text-lg"];
const xl = ["h-14", "px-8", "py-4", "text-base"];
const xxl = ["h-15", "px-8", "py-4", "text-base"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<button
  class:list={[
    "flex",
    "transition",
    "text-center",
    "justify-center",
    "font-medium",
    "items-center",
    "duration-500",
    "ease-in-out",
    "transition-colors",
    "focus:outline-2",
    "outline-offset-4",
    variant === "default" && defaultClass,
    variant === "accent" && accentClass,
    variant === "muted" && mutedClass,
    variant === "none" && [], // No additional classes for "none" variant
    size === "xs" && xs,
    size === "sm" && sm,
    size === "base" && base,
    size === "md" && md,
    size === "lg" && lg,
    size === "xl" && xl,
    size === "xxl" && xxl,
    gap === "xs" && gapXS,
    gap === "sm" && gapSM,
    gap === "base" && gapBase,
    gap === "md" && gapMD,
    gap === "lg" && gapLG,
    ...additionalClasses,
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</button>
